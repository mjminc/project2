<div class="row">
  <div class="col-xs-12">
    <div class="row">
      <div class="col-xs-12">
        <h3 class="text-center space-below section-header">Challenge Progress</h3>
      </div>
    </div>

    <!-- calendar -->
    <div id="calendar" class="progress-calendar">

    </div>
    <!-- /calendar -->

    <div class="progress-labels">
      <span class="progress-label start-date"><%= l @challenge.start_date, format: :long %></span>
      <span class="progress-label end-date"><%= l @challenge.end_date, format: :long %></span>
    </div>
    <div class="progress">
      <div class="progress-bar progress-bar-striped active"  role="progressbar" aria-valuenow="<%= @duration[:pct_complete] %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= @duration[:pct_complete] %>%">
        <span class="sr-only"><%= @duration[:pct_complete] %>% Complete</span>
      </div>
    </div>
  </div>
</div>

<script>
  $('#calendar').fullCalendar({});
  $('.progress-bar').click(function() {
    $('.progress-calendar').toggleClass('slideOpen');
  });
</script>