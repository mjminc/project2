<div class="row">
  <div class="col-12-xs">
    <div class="jumbotron text-center no-padding">

      <video id="challenge-video" class="video-js vjs-default-skin hero-vid"
        controls preload="auto" width="auto" height="auto"
        poster="http://sandbox.thewikies.com/vfe-generator/images/big-buck-bunny_poster.jpg"
        data-setup='{"example_option":true}'>
        <source src="http://clips.vorwaerts-gmbh.de/VfE_html5.mp4" type="video/mp4">
        <source src="http://clips.vorwaerts-gmbh.de/VfE.webm" type="video/webm">
        <source src="http://clips.vorwaerts-gmbh.de/VfE.ogv" type="video/ogg">
        <p class="vjs-no-js">To view this video please enable JavaScript, and consider upgrading to a web browser that <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a></p>
      </video>
      <h2 class="hero-title"><%= @challenge.title %></h2>
    </div>
  </div>
</div>

<% if !@is_past %>
  <%= render 'progress_bar' %>
<% else %>
  <%= render 'end_stamp' %>
<% end %>

<div class="row">
  <div class="col-md-9">
    <div class="messages">
      <h3 class="section-header">Messages</h3>
      <ul>
      <% @messages.each do |message| %>
        <% msg_user = get_user_from_message(message) %>
        <li class="msg">
          <div class="row">
            <div class="col-sm-2">
              <div class="msg-user">
                <img src="http://www.thesharkguys.com/wp-content/uploads/2009/02/curly.jpg" alt="Responsive image" class="img-circle img-responsive portrait">
                <h4 class="text-center"><%= msg_user.first_name %></h4>
              </div>
            </div>
            <div class="col-sm-10">
              <div class="msg-text text-left"><p><%= message.text %></p></div>
            </div>
          </div><!-- /.row -->
        </li>
      <% end %>

      </ul>
    </div>
  </div>

  <div class="col-md-3">
    <div class="users">
      <h3 class="section-header">Challenge Team</h3>
      <ul>
        <% @challenge.users.each do |user| %>
        <li class="user">
          <p><a class="<%= get_user_challenge_role(user, @challenge.id) %>" href="/users/<%= user.id %>"><%= user.first_name %> <%= user.last_name %></a> | <%= get_user_challenge_role(user, @challenge.id) %></p>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div><!-- /.row-->




