
<div class="row">
<div class="col-md-8 offset-2">
		<h2>
			<% if @user.avatar_file_name != nil %>
				<%= image_tag @user.avatar.url(:square) %>
			<% else %>
				<img src="http://i488.photobucket.com/albums/rr242/tampa1_bucket/mr_t.jpg" alt="mr t">
			<% end %>
			<span class="username"><%=@user.first_name %> <%=@user.last_name %></span>
		</h2>

		<h3>Challenges</h3>
			<% if @user.challenges.length > 0 %>
				<p>Total Number of Challenges: <%= @user.challenges.length %></p>
			<h4>Challenges</h4>
				<ul>
					<% @user.challenges.each do |challenge| %>
						<li class="challenge <%= challenge.status %>">
							<a class="chal" href="/users/<%= @user.id %>/challenges/<%= challenge.id%>" ><%= challenge.title %> <%= challenge.category %></a> | <span class="status"><%= challenge.status %></span>
						</li>
					<% end%>
				</ul>
			<% else %>
				<a href="/users/<%=@user.id%>/challenges/new">Create Challange</a>
			<% end %>
		</div>
		<div class="col-md-2">
			<%= link_to "Edit profile", edit_user_path(@user), class: "btn btn-success" %>
		</div>
	</div>
</div>