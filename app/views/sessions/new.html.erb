<h1 class="subtitle text-center">Login</h1>
<div class="form">

		<%flash.each do |k,v|%>
	<h2 id="<%= 	k %>"> <%= v %></h2>
		<%end%>

		<div class="col-md-4 col-md-offset-4">

			<%= form_for :user do |f| %>
				<p></p>
				<%= f.text_field :email, placeholder: "enter email", class: "form-control" %><br>
				<%= f.password_field :password, placeholder: "and password", class: "form-control" %><br>
				<%= number_field_tag :challenge, nil, value: @challenge_id || nil, placeholder: "Enter New Challenge ID", class: "form-control" %><br>
				<%= f.submit "login", class: "btn form-control btn-success" %><br>
				<%= link_to "Forgot Password?", new_password_path %>
			<% end %>

		</div>
	
</div>
