

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <h1 class="subtitle">Create a challenge</h1>
  </div>
</div>
<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_for @challenge, url: {action: 'create'}, html: {id: "new-challenge-form"} do |f| %>

        <div>
          <%=f.text_field :title, placeholder: 'challenge name', class: "form-control"%>
        </div><br>

        <label>Select a charity</label>
        <div class="fieldset">
        <div class="charity-form">
          <div class="form-group">
            <input type="text" id="charity_search" size="60" placeholder="Search by name or choose a category" class="form-control">
          </div>
          <div class="form-group">
            <select id="charity_cats" name="challenge[charity_cat]" class="form-control"></select>
          </div>
        </div>
        <div id="charity_results" class="charity-results"></div>
        </div>

        <div>
          <%=label :challenge_amount, "Amount to donate"%><br>
          <%=f.text_field :challenge_amount, placeholder: "amount to donate", class: "form-control"%>
        </div><br>

         <div>
          <%= label :start_date, "Start Date" %><br>
          <%= f.date_select :start_date, placeholder: "select date", class: "form-control" %>
        </div><br>

        <div class="end-date">
          <%= label :end_date, "End Date" %><br>
          <%= f.date_select :end_date, placeholder: "select date", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= label :phone_numbers, "Invite Supporters" %><br>
          <%= text_area_tag :phone_numbers, nil, placeholder: "Enter phone numbers separated by spaces", class: "form-control textarea-field" %>
        </div>

        <%=f.hidden_field :status, value: "open"%>
        <%= f.hidden_field :charity_id %>


        <%= f.submit "Create Challenge!", class: "btn form-control btn-success" %>
    <% end %>
  </div>
</div>
