
{{#each result.message}}
  <li class="msg fade-first msg{{message.id}}">
    <div class="row">
      <div class="col-sm-2">
        <div class="msg-user">
          {{#if user.avatar_file_name}}
          <img src="https://s3.amazonaws.com/S3_thejar/users/avatars%3A/000/000/0{{user.id}}/square/{{user.avatar_file_name}}" alt="Responsive image" class="img-circle img-responsive portrait">
          <h4 class="text-center">{{user.first_name}}</h4>
          {{else}}
            {{#if message.avatar_file_name}}
            <img src="https://s3.amazonaws.com/S3_thejar/users/avatars%3A/000/000/0{{message.user_id}}/square/{{message.avatar_file_name}}" alt="Responsive image" class="img-circle img-responsive portrait">
            <h4 class="text-center">{{message.first_name}}</h4>
            {{else}}
            <img src="http://i488.photobucket.com/albums/rr242/tampa1_bucket/mr_t.jpg" alt="Responsive image" class="img-circle img-responsive portrait">
            <h4 class="text-center">{{message.first_name}}</h4>
            {{/if}}
          {{/if}}

        </div>
      </div>
      <div class="col-sm-10">
        <div class="msg-text text-left">
          <p>{{message.text}}</p>
          {{#if message.is_caught}}
            {{#if message.is_confirmed}}
              <p class="caught-message">Been caught.</p>
            {{else}}
            <button class="btn btn-danger btn-small caught" data-msgid="{{message.id}}" data-userid="{{message.user_id}}">Caught!</button>
            {{/if}}
          {{/if}}
        </div>
      </div>
    </div><!-- /.row -->
  </li>
{{/each}}